#include "shell.h"
/**
 * getline: To get the command line arguments
 * @input: Used as variable to hold command line
 * @size: used for argument size in bytes
 *
 * return: to retun nothing
 */
void getargs(char *input, size_t size)
{
	char *buff_copy = NULL;
	char *buff = NULL;
	char **args = NULL;
	size_t n = 0;
	ssize_t nums;
	int toks, count = 0;

	nums = getline(&buff, &n, stdin);

	if (nums == -1)
	{
		errno = 0;
		return (-1);
	}

	buff_copy = strdup(buff);
	toks= num_toks(buff_copy, DELIM);
	args = tokenise_line(buff, DELIM, toks);
	
	if (args[0] != NULL)
	{
		exec_cmd(args, input, count);
	}

	if (fgets(input, size, stdin) == NULL)
	{
		if (feof(stdin))
		{
			my_print("\n");
			exit(EXIT_SUCCESS);
		}
		else
		{
			my_print("Error Reading inputs \n");
			exit(EXIT_FAILURE);
		}
	}
	free(buff_copy);
	free(args);
}
